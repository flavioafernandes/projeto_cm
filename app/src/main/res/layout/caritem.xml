<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="340dp"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    tools:layout_editor_absoluteX="65dp"
    tools:layout_editor_absoluteY="99dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/relativelayout_custom_create">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/blue_app"
        android:layout_margin="10dp"
        android:text="@string/textview"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="-24dp"
        android:gravity="center_vertical"
        android:paddingStart="30dp"
        android:layout_margin="0dp"
        android:text="@string/textview"
        android:textColor="@color/blue_app"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_above="@+id/button7"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="58dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button7"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rectangle_blue_right"
        android:text="Detalhes" />


</com.google.android.material.circularreveal.CircularRevealRelativeLayout>
