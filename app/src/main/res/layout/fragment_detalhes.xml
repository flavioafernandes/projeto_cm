<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Detalhes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/group_42731"
            android:layout_width="415dp"
            android:layout_height="280dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#C0C3CF"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/remover"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_white_left"
            android:text="@string/remover"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/editar"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rectangle_blue_right"
            android:text="@string/editar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.867"
            app:layout_constraintStart_toEndOf="@+id/remover" />

        <ImageView
            android:id="@+id/Car_image"
            android:layout_width="376dp"
            android:layout_height="153dp"
            android:src="@mipmap/car_temp_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SubTitle_car" />

        <ImageView
            android:id="@+id/Car_logo"
            android:layout_width="80dp"
            android:layout_height="56dp"
            android:src="@android:drawable/btn_star"
            app:layout_constraintBottom_toTopOf="@+id/Car_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toEndOf="@+id/Title_car"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.641" />

        <TextView
            android:id="@+id/Title_car"
            android:layout_width="223dp"
            android:layout_height="35dp"
            android:layout_marginBottom="9dp"
            android:text="@string/textview"
            android:textColor="@color/blue_app"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toTopOf="@+id/SubTitle_car"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.964" />

        <TextView
            android:id="@+id/SubTitle_car"
            android:layout_width="226dp"
            android:layout_height="27dp"
            android:layout_marginTop="72dp"
            android:text="@string/textview"
            android:textColor="@color/blue_app"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/voltar"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_vector_1"
            app:layout_constraintBottom_toTopOf="@+id/Car_image"
            app:layout_constraintEnd_toStartOf="@+id/Title_car"
            app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.433" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="360dp"
            android:layout_height="250dp"
            android:layout_marginTop="51dp"
            app:layout_constraintBottom_toTopOf="@+id/remover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/group_42731"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/scroll_car_info"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/remover"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Car_image"
                app:layout_constraintVertical_bias="0.113" />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>